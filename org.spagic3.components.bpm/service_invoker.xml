<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" 
	name="org.spagic3.components.bpm.invoker.OSGiServiceInvoker">

   <implementation class="org.spagic3.components.bpm.invoker.OSGiServiceInvoker"/>
   
   <reference bind="setMessageRouter" cardinality="1..1" 
   		interface="org.spagic3.core.routing.IMessageRouter" 
   		name="IMessageRouter" 
   		policy="dynamic" unbind="unsetMessageRouter"/>
   
  
   
   <service>
   
      <provide interface="org.osgi.service.event.EventHandler"/>
      <provide interface="org.spagic3.core.ISpagicService"/>
      <provide interface="org.spagic3.components.bpm.invoker.IServiceInvoker"/>    
   
   </service>
   <property name="spagic.id" type="String" value="invoker"/>
   <property name="event.topics" type="String" value="SPAGIC/MESSAGES/invoker"/>
   
</scr:component>
