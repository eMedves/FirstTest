<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" 
	name="org.spagic.workflow.bpm.BPMService">
	

   <implementation class="org.spagic3.components.bpm.service.BPMService"/>
   
   <service>
      <provide interface="org.osgi.service.event.EventHandler"/>
      <provide interface="org.spagic3.core.ISpagicService"/>
   </service>
 
   <reference bind="setMessageRouter" cardinality="1..1" 
   		interface="org.spagic3.core.routing.IMessageRouter" 
   		name="IMessageRouter" 
   		policy="dynamic" unbind="unsetMessageRouter"/>
   
   <reference bind="setDelegatedEngine" 
   		cardinality="1..1" 
   		interface="org.spagic.workflow.api.IProcessEngine" 
   		name="IProcessEngine" 
   		policy="dynamic" unbind="unsetDelegatedEngine"/>
  
  
   
   <property name="spagic.id" type="String" value="BPMService"/>
   <property name="event.topics" type="String" value="SPAGIC/MESSAGES/BPMService"/>
   

  
   
 
   
</scr:component>
