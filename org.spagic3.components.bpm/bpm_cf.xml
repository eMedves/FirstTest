<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" 
	name="org.spagic3.components.bpmfactory"
	factory="spagic3.bpmfactory">
	
   <implementation class="org.spagic3.components.bpm.BPMComponent"/>
   
   <reference bind="setMessageRouter" cardinality="1..1" 
   		interface="org.spagic3.core.routing.IMessageRouter" 
   		name="IMessageRouter" 
   		policy="dynamic" unbind="unsetMessageRouter"/>
   		
   <reference bind="setProcessEngine" 
   		cardinality="1..1" 
   		interface="org.spagic.workflow.api.IProcessEngine" 
   		name="IProcessEngine" 
   		policy="dynamic" unbind="unsetProcessEngine"/>
   
   	 <reference 
   		bind="bind" 
   		cardinality="1..1" 
   		interface="org.osgi.service.event.EventAdmin" 
   		name="EventAdmin" 
   		policy="static" unbind="unbind"/>

   <service>
      <provide interface="org.osgi.service.event.EventHandler"/>
      <provide interface="org.spagic3.core.ISpagicService"/>
   </service>
   
</scr:component>
