<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" 
	name="org.spagic3.deployer.DeploymentService">
   <implementation class="org.spagic3.deployer.DeploymentService"/>
   <service>
      <provide interface="org.spagic3.deployer.IDeploymentService"/>
   </service>
   <reference 
   		name="cf"
   		bind="addComponentFactory" 
   		cardinality="0..n" 
   		interface="org.osgi.service.component.ComponentFactory" 
   		policy="dynamic" 
   		unbind="removeComponentFactory"/>
   <reference bind="bindDynamicRouter" cardinality="1..1" interface="org.spagic3.core.routing.IDynamicRouter" name="IDynamicRouter" policy="dynamic" unbind="unbindDynamicRouter"/>
   
</scr:component>
